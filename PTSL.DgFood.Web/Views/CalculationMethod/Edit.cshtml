@model PTSL.DgFood.Web.Model.CalculationMethodVM
@{
    ViewBag.Title = "Edit";
}

<div class="card">
    <div class="card-header">
        <h4>Edit Calculation Method</h4>
    </div>

    <div class="card-body">
        @using (Html.BeginForm("Edit", "CalculationMethod", FormMethod.Post, new { id = "CalculationMethodForm" }))
        {
            <input type="hidden" name="Id" id="Id" value="@Model.Id" />
            <input type="hidden" name="CreatedAt" id="CreatedAt" value="@Model.CreatedAt" />
            <div class="form-horizontal">
                <div class="form-group">
                    <label for="inputCalculationMethod">Calculation Method Name <span style="color:red;">*</span></label>
                    <input type="text" class="form-control col-md-6" id="CalculationMethodName" name="CalculationMethodName" value="@Model.CalculationMethodName" placeholder="Enter Calculation Method Name" required>
                </div>

                <div class="form-group">
                    <label for="inputCalculationMethodBn">Calculation Method Name Bangla<span style="color:red;"></span></label>
                    <input type="text" class="form-control col-md-6" id="CalculationMethodNameBn" name="CalculationMethodNameBn" value="@Model.CalculationMethodNameBn" placeholder="Enter Calculation Method Name Bangla">
                </div>

                <div class="form-group col-md-6">
                    <button type="submit" class="btn btn-primary submit-btn pull-right">Submit</button>
                </div>
            </div>
        }
    </div>
    <hr />
    <div class="card-header pull-left">
        <a href="/CalculationMethod/Index" class="btn btn-warning">Return to Index</a>
    </div>
</div>

<script>
    $(".submit-btn").on("click", function () {
        if ($("#CalculationMethodForm").valid()) {
            //Do something here
            $(".loader").fadeIn("slow");
        }
    });

    $("#CalculationMethodForm").validate({
        // Specify validation rules
        rules: {
            CalculationMethodName: "required"
        },

    });


</script>