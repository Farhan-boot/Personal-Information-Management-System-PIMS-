@model PTSL.DgFood.Web.Model.PostResponsibilityVM
@{
    ViewBag.Title = "Create";
    var Message = ViewBag.Message;
}


<div class="card">
    <div class="card-header">
        <h4>Create New Post Responsibility</h4>
    </div>

    <div class="card-body">
        @using (Html.BeginForm("Create", "PostResponsibility", FormMethod.Post, new { id = "PostResponsibilityForm" }))
        {
            <div class="form-horizontal">
                <div class="form-group">
                    <label for="inputPostResponsibility">Post Responsibility Name <span style="color:red;">*</span></label>
                    <input type="text" class="form-control col-md-6" id="PostResponsibilityName" name="PostResponsibilityName" value="@Model.PostResponsibilityName" placeholder="Enter PostResponsibility Name" required>
                </div>
                <div class="form-group">
                    <label for="inputPostResponsibilityBn">Post Responsibility Name Bangla<span style="color:red;"></span></label>
                    <input type="text" class="form-control col-md-6" id="PostResponsibilityNameBn" name="PostResponsibilityNameBn" value="@Model.PostResponsibilityNameBn" placeholder="Enter PostResponsibility Name Bangla">
                </div>
                <div class="form-group col-md-6">
                    <button type="submit" class="btn btn-primary submit-btn pull-right">Submit</button>
                </div>
            </div>
        }
    </div>
    <hr />
    <div class="card-header pull-left">
        <a href="/PostResponsibility/Index" class="btn btn-warning">Return to Index</a>
    </div>
</div>

<script>
    $(".submit-btn").on("click", function () {
        if ($("#PostResponsibilityForm").valid()) {
            //Do something here
            $(".loader").fadeIn("slow");
        }
    });

    $("#PostResponsibilityForm").validate({
        // Specify validation rules
        rules: {
            PostResponsibilityName: "required"
        },

    });


</script>