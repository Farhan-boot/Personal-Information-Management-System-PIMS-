@model PTSL.DgFood.Web.Model.DistrictVM
@{
    ViewBag.Title = "Create";
    var Message = ViewBag.Message;
}


<div class="card">
    <div class="card-header">
        <h4>Create New District</h4>
    </div>

    <div class="card-body">
        @using (Html.BeginForm("Create", "District", FormMethod.Post, new { id = "districtForm" }))
        {
            <div class="form-horizontal">
                <div class="form-group">
                    <label for="inputDistrict">Division Name <span style="color:red;">*</span></label>
                    @Html.DropDownList("DivisionId", null, "Choose..", htmlAttributes: new { @class = "form-control col-md-6", @required = "required" })
                </div>
                <div class="form-group">
                    <label for="inputDistrict">District Name <span style="color:red;">*</span></label>
                    <input type="text" class="form-control col-md-6" id="DistrictName" name="DistrictName" value="@Model.DistrictName" placeholder="Enter District Name" required>
                </div>
                <div class="form-group">
                    <label for="inputDistrictBangla">District Name Bangla<span style="color:red;"></span></label>
                    <input type="text" class="form-control col-md-6" id="DistrictNameBangla" name="DistrictNameBangla" value="@Model.DistrictNameBangla" placeholder="Enter District Name Bangla">
                </div>
                <div class="form-group">
                    <label for="inputGeoCode">Geo Code <span style="color:red;"></span></label>
                    <input type="text" class="form-control col-md-6" id="GeoCode" name="GeoCode" value="@Model.GeoCode" placeholder="Enter Geo Code">
                </div>

                <div class="form-group col-md-6">
                    <button type="submit" class="btn btn-primary submit-btn pull-right">Submit</button>
                </div>
            </div>
        }
    </div>
    <hr />
    <div class="card-header pull-left">
        <a href="/District/Index" class="btn btn-warning">Return to Index</a>
    </div>
</div>

<script>
    $(".submit-btn").on("click", function () {
        if ($("#districtForm").valid()) {
            //Do something here
            $(".loader").fadeIn("slow");
        }
    });

    $("#districtForm").validate({
        // Specify validation rules
        rules: {
            DistrictName: "required",
            DivisionId: "required"
        },

    });


</script>