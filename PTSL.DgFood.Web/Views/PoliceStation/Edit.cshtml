@model PTSL.DgFood.Web.Model.PoliceStationVM
@{
    ViewBag.Title = "Edit";
}

<div class="card">
    <div class="card-header">
        <h4>Edit Police Station</h4>
    </div>

    <div class="card-body">
        @using (Html.BeginForm("Edit", "PoliceStation", FormMethod.Post, new { id = "PoliceStationForm" }))
        {
            <input type="hidden" name="Id" id="Id" value="@Model.Id" />
            <input type="hidden" name="CreatedAt" id="CreatedAt" value="@Model.CreatedAt" />
            <div class="form-horizontal">
                <div class="form-group">
                    <label for="inputPoliceStation">District Name <span style="color:red;">*</span></label>
                    @Html.DropDownList("DistrictId", null, "Choose..", htmlAttributes: new { @class = "form-control col-md-6", @required = "required" })
                </div>
                <div class="form-group">
                    <label for="inputPoliceStation">Police Station Name <span style="color:red;">*</span></label>
                    <input type="text" class="form-control col-md-6" id="PoliceStationName" name="PoliceStationName" value="@Model.PoliceStationName" placeholder="Enter PoliceStation Name" required>
                </div>
                <div class="form-group">
                    <label for="inputPoliceStationBangla">Police Station Name Bangla<span style="color:red;"></span></label>
                    <input type="text" class="form-control col-md-6" id="PoliceStationNameBangla" name="PoliceStationNameBangla" value="@Model.PoliceStationNameBangla" placeholder="Enter PoliceStation Name Bangla">
                </div>

                <div class="form-group col-md-6">
                    <button type="submit" class="btn btn-primary submit-btn pull-right">Submit</button>
                </div>
            </div>
        }
    </div>
    <hr />
    <div class="card-header pull-left">
        <a href="/PoliceStation/Index" class="btn btn-warning">Return to Index</a>
    </div>
</div>


<script>
    $(".submit-btn").on("click", function () {
        if ($("#PoliceStationForm").valid()) {
            //Do something here
            $(".loader").fadeIn("slow");
        }
    });

    $("#PoliceStationForm").validate({
        // Specify validation rules
        rules: {
            PoliceStationName: "required",
            DistrictId: "required"
        },

    });


</script>