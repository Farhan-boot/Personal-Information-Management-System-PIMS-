@model ICollection<PTSL.DgFood.Web.Model.SpouseInformationListVM>
@{
    Layout = null;
}
<tbody id="spouseListBody">
    @if (Model != null)
    {
        int i = 1;
        foreach (var data in Model)
        {
            <tr>
                <td>@i</td>
                <td>@data.NameInBangla</td>
                <td>@data.NameInEnglish</td>
                <td>@data.DivisionName</td>
                <td>@data.DistrictName</td>
                <td>@data.Designation</td>
                <td style="width:220px;float:left;">
                    <a href="/EmployeeInformation/EditSpouseInformation?spouseid=@data.Id&empid=@data.EmployeeInformationId" class="btn btn-primary btn-sm"><i class="fa fa-edit"></i></a>
                    @*<a href="/SpouseInformation/Details?id=@data.Id" class="btn btn-info btn-sm"><i class="fa fa-eye"></i></a>*@
                    <a href="#" class="btn btn-info icon-left btn-sm" data-toggle="modal" data-target=".spouse-details-modal" onclick="javascript: setSpouseModalData(@data.Id)"><i class="fa fa-eye"></i></a>
                    <button onclick="showDeleteConfirmSpouseMessage(@data.Id)" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i></button>
                </td>
            </tr>
            i++;
        }
    }
</tbody>