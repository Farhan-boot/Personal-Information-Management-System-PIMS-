@model PTSL.DgFood.Web.Model.PromtionNatureVM
@{
    ViewBag.Title = "Create";
    var Message = ViewBag.Message;
}


<div class="card">
    <div class="card-header">
        <h4>Create New Promotion Nature</h4>
    </div>

    <div class="card-body">
        @using (Html.BeginForm("Create", "PromtionNature", FormMethod.Post, new { id = "PromtionNatureForm" }))
        {
            <div class="form-horizontal">
                <div class="form-group">
                    <label for="inputPromtionNature">Promotion Nature Name <span style="color:red;">*</span></label>
                    <input type="text" class="form-control col-md-6" id="PromtionNatureName" name="PromtionNatureName" value="@Model.PromtionNatureName" placeholder="Enter Promotion Nature Name" required>
                </div>
                <div class="form-group">
                    <label for="inputPromtionNatureBangla">Promotion Nature Name Bangla<span style="color:red;"></span></label>
                    <input type="text" class="form-control col-md-6" id="PromtionNatureNameBangla" name="PromtionNatureNameBangla" value="@Model.PromtionNatureNameBangla" placeholder="Enter Promotion Nature Name Bangla">
                </div>

                <div class="form-group col-md-6">
                    <button type="submit" class="btn btn-primary submit-btn pull-right">Submit</button>
                </div>
            </div>
        }
    </div>
    <hr />
    <div class="card-header pull-left">
        <a href="/PromtionNature/Index" class="btn btn-warning">Return to Index</a>
    </div>
</div>

<script>
    $(".submit-btn").on("click", function () {
        if ($("#PromtionNatureForm").valid()) {
            //Do something here
            $(".loader").fadeIn("slow");
        }
    });

    $("#PromtionNatureForm").validate({
        // Specify validation rules
        rules: {
            PromtionNatureName: "required"
        },

    });


</script>