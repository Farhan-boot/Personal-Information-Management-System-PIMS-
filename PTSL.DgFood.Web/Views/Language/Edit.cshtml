@model PTSL.DgFood.Web.Model.LanguageVM
@{
    ViewBag.Title = "Edit";
}

<div class="card">
    <div class="card-header">
        <h4>Edit Language</h4>
    </div>

    <div class="card-body">
        @using (Html.BeginForm("Edit", "Language", FormMethod.Post, new { id = "LanguageForm" }))
        {
            <input type="hidden" name="Id" id="Id" value="@Model.Id" />
            <input type="hidden" name="CreatedAt" id="CreatedAt" value="@Model.CreatedAt" />
            <div class="form-horizontal">
                <div class="form-group">
                    <label for="inputLanguage">Language Name <span style="color:red;">*</span></label>
                    <input type="text" class="form-control col-md-6" id="LanguageName" name="LanguageName" value="@Model.LanguageName" placeholder="Enter Language Name" required>
                </div>
                <div class="form-group">
                    <label for="inputLanguageBn">Language Name Bangla<span style="color:red;"></span></label>
                    <input type="text" class="form-control col-md-6" id="LanguageNameBn" name="LanguageNameBn" value="@Model.LanguageNameBn" placeholder="Enter Language Name Bangla">
                </div>
                <div class="form-group col-md-6">
                    <button type="submit" class="btn btn-primary submit-btn pull-right">Submit</button>
                </div>
            </div>
        }
    </div>
    <hr />
    <div class="card-header pull-left">
        <a href="/Language/Index" class="btn btn-warning">Return to Index</a>
    </div>
</div>

<script>
    $(".submit-btn").on("click", function () {
        if ($("#LanguageForm").valid()) {
            //Do something here
            $(".loader").fadeIn("slow");
        }
    });

    $("#LanguageForm").validate({
        // Specify validation rules
        rules: {
            LanguageName: "required"
        },

    });


</script>