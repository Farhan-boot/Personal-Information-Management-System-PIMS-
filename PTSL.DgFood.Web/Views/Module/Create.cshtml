@model PTSL.DgFood.Web.Model.ModuleVM
@{
    ViewBag.Title = "Create";
    var Message = ViewBag.Message;
}


<div class="card">
    <div class="card-header">
        <h4>Create New Module</h4>
    </div>

    <div class="card-body">
        @using (Html.BeginForm("Create", "Module", FormMethod.Post, new { id = "ModuleForm" }))
        {
        <div class="form-horizontal">
            <div class="form-group">
                <label for="inputModule">Module Name</label>
                <input type="text" class="form-control col-md-6" id="ModuleName" name="ModuleName" value="@Model.ModuleName" placeholder="Enter Module Name" required>

            </div>
            <div class="form-group">
                <label for="inputModule">Module Icon</label>
                <input type="text" class="form-control col-md-6" id="ModuleIcon" name="ModuleIcon" value="@Model.ModuleIcon" placeholder="Enter Module Icon" required>

            </div>
            <div class="form-group">
                <label for="inputModule">Menue Order</label>
                <input type="text" class="form-control col-md-6" id="MenueOrder" name="MenueOrder" value="@Model.MenueOrder" placeholder="Enter Menue Order Sl.No" required>

            </div>
            <div class="form-group col-md-6">
                <button type="submit" class="btn btn-primary submit-btn pull-right">Submit</button>
            </div>
        </div>
        }
    </div>
    <hr />
    <div class="card-header pull-left">
        <a href="/Module/Index" class="btn btn-warning">Return to Index</a>
    </div>
</div>

<script>
    $(".submit-btn").on("click", function () {
        if ($("#ModuleForm").valid()) {
            //Do something here
            $(".loader").fadeIn("slow");
        }
    });

    $("#ModuleForm").validate({
        // Specify validation rules
        rules: {
            ModuleName: "required"
        },

    });


</script>