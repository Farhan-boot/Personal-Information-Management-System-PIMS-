
@model IEnumerable<PTSL.DgFood.Web.Model.EntityViewModels.EmployeeManagementEntity.EmployeeInformationByDisciplinaryVM>
@{
    ViewBag.Title = "Employee List by Disciplinary Actions";
}
<style>
    @@media print {
        #printPageButton {
            display: none;
        }
    }
</style>
<div class="row">
    <div class="col-12">
        <div class="card" id="printEmployeeInfo" style="display:block;">

            <div class="card-header">
                <div class="col-md-11">
                    <h2 style="text-align:center">Directorate General of Food</h2>
                    <h4 style="text-align:center">
                        Employee List with By Disciplinary Actions
                    </h4>
                </div>
                <div id="col-md-1">
                    @*<button class="btn btn-info" id="printPageButton" onClick="printDiv();">Print</button>*@
                    <a href="/Reports/PrintPreviewStatusWiseEmployeeRpt" class="btn btn-info" id="printPageButton">Print</a>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="tableExport" style="width:100%;">
                        <thead>
                            <tr>
                                <th>SL</th>
                                <th>Emp Id</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Mobile Number</th>
                                <th>National ID</th>
                            </tr>
                        </thead>
                        @{
                            int i = 1;
                        }
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var data in Model)
                                {
                                    <tr>
                                        <td>@i</td>
                                        <td>@data.Id</td>
                                        <td>@data.NameEnglish</td>
                                        <td>@data.Email</td>
                                        <td>
                                            @data.MobileNumber
                                        </td>
                                        <td>@data.NationalID</td>
                                    </tr>
                                    i++;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="card-header pull-left">
                <a href="/Reports/Index" class="btn btn-warning">Return to Index</a>
            </div>
        </div>
    </div>

</div>
