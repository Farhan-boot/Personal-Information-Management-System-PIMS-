@model PTSL.DgFood.Web.Model.CategoryVM
@{
    ViewBag.Title = "Edit";
}

<div class="card">
    <div class="card-header">
        <h4>Edit Category</h4>
    </div>

    <div class="card-body">
        @using (Html.BeginForm("Edit", "Category", FormMethod.Post, new { id = "CategoryForm" }))
        {
            <input type="hidden" name="Id" id="Id" value="@Model.Id" />
            <input type="hidden" name="CreatedAt" id="CreatedAt" value="@Model.CreatedAt" />
            <div class="form-horizontal">
                <div class="form-group">
                    <label for="inputCategory">Category Name <span style="color:red;">*</span></label>
                    <input type="text" class="form-control col-md-6" id="CategoryName" name="CategoryName" value="@Model.CategoryName" placeholder="Enter Category Name" required>
                </div>
                <div class="form-group">
                    <label for="inputCategory">Category Name Bangla<span style="color:red;"></span></label>
                    <input type="text" class="form-control col-md-6" id="CategoryNameBn" name="CategoryNameBn" value="@Model.CategoryNameBn" placeholder="Enter Category Name Bangla">
                </div>
                <div class="form-group col-md-6 p-0">
                    <button type="submit" class="btn btn-primary submit-btn pull-right">Submit</button>
                </div>
            </div>
        }
    </div>
    <hr />
    <div class="card-header pull-left">
        <a href="/Category/Index" class="btn btn-warning">Return to Index</a>
    </div>
</div>

<script>
    $(".submit-btn").on("click", function () {
        if ($("#CategoryForm").valid()) {
            //Do something here
            $(".loader").fadeIn("slow");
        }
    });

    $("#CategoryForm").validate({
        // Specify validation rules
        rules: {
            CategoryName: "required"
        },

    });


</script>