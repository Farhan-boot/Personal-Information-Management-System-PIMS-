@model PTSL.BdArmy.Web.Model.PmsGroupVM
@{
    ViewBag.Title = "Create";
    var Message = ViewBag.Message;
}


<div class="card">
    <div class="card-header">
        <h4>Create New Pms Group</h4>
    </div>

    <div class="card-body">
        @using (Html.BeginForm("Create", "PmsGroup", FormMethod.Post, new { id = "PmsGroupForm" }))
        {
            <div class="form-horizontal">

                <div class="form-group">
                    <label for="inputPmsGroup">Group Name</label>
                    <input type="text" class="form-control col-md-6" id="GroupName" name="GroupName" value="@Model.GroupName" placeholder="Enter Group Name" required>

                </div>
                <div class="form-group">
                    <label for="inputPmsGroup">Group Description</label>
                    <input type="text" class="form-control col-md-6" id="GroupDescription" name="GroupDescription" value="@Model.GroupDescription" placeholder="Enter Group Description" required>

                </div>
                <div class="form-group col-md-6">
                    <button type="submit" class="btn btn-primary submit-btn pull-right">Submit</button>
                </div>
            </div>
        }
    </div>
    <hr />
    <div class="card-header pull-left">
        <a href="/PmsGroup/Index" class="btn btn-warning">Return to Index</a>
    </div>
</div>

<script>
    $(".submit-btn").on("click", function () {
        if ($("#PmsGroupForm").valid()) {
            //Do something here
            $(".loader").fadeIn("slow");
        }
    });

    $("#PmsGroupForm").validate({
        // Specify validation rules
        rules: {
            GroupName: "required",
            GroupDescription: "required"
        },

    });


</script>