@model PTSL.DgFood.Web.Model.EntityViewModels.GeneralSetup.UpazillaVM
@{
    ViewBag.Title = "Edit";
}

<div class="card">
    <div class="card-header">
        <h4>Edit Upazilla</h4>
    </div>

    <div class="card-body">
        @using (Html.BeginForm("Edit", "Upazilla", FormMethod.Post, new { id = "upazillaForm" }))
        {
            <input type="hidden" name="Id" id="Id" value="@Model.Id" />
            <input type="hidden" name="CreatedAt" id="CreatedAt" value="@Model.CreatedAt" />
            <div class="form-horizontal">
                <div class="form-group">
                    <label for="inputDistrict">District Name <span style="color:red;">*</span></label>
                    @Html.DropDownList("DistrictId", null, "Choose..", htmlAttributes: new { @class = "form-control col-md-6", @required = "required" })
                </div>
                <div class="form-group">
                    <label>Upazilla Name <span style="color:red;">*</span></label>
                    <input type="text" class="form-control col-md-6" id="UpazillaName" name="Name" value="@Model.Name" placeholder="Enter Upazilla Name" required>
                </div>
                <div class="form-group">
                    <label>Upazilla Name (Bangla)</label>
                    <input type="text" class="form-control col-md-6" id="UpazillaNameBn" name="NameBn" value="@Model.NameBn" placeholder="Enter Upazilla Name Bangla">
                </div>
                <div class="form-group">
                    <label>Geo Code</label>
                    <input type="text" class="form-control col-md-6" id="GeoCode" name="GeoCode" value="@Model.GeoCode" placeholder="Enter Geo Code">
                </div>
                
                <div class="form-group col-md-6">
                    <button type="submit" class="btn btn-primary submit-btn pull-right">Submit</button>
                </div>
            </div>
        }
    </div>
    <hr />
    <div class="card-header pull-left">
        <a href="/Upazilla/Index" class="btn btn-warning">Return to Index</a>
    </div>
</div>


<script>
    $(".submit-btn").on("click", function () {
        if ($("#upazillaForm").valid()) {
            //Do something here
            $(".loader").fadeIn("slow");
        }
    });

    $("#upazillaForm").validate({
        // Specify validation rules
        rules: {
            UpazillaName: "required",
            DistrictId: "required"
        },
    });
</script>