@model PTSL.DgFood.Web.Model.EntityViewModels.GeneralSetup.UnionVM
@{
    ViewBag.Title = "Create";
    var Message = ViewBag.Message;
}


<div class="card">
    <div class="card-header">
        <h4>Create New Union</h4>
    </div>

    <div class="card-body">
        @using (Html.BeginForm("Create", "Union", FormMethod.Post, new { id = "UnionForm" }))
        {
            <div class="form-horizontal">
                <div class="form-group">
                    <label for="inputUpazilla">Upazilla Name <span style="color:red;">*</span></label>
                    @Html.DropDownList("UpazillaId", null, "Choose..", htmlAttributes: new { @class = "form-control col-md-6", @required = "required" })
                </div>
                <div class="form-group">
                    <label for="inputUpazilla">Union Name <span style="color:red;">*</span></label>
                    <input type="text" class="form-control col-md-6" id="UnionName" name="Name" value="@Model.Name" placeholder="Enter Union Name" required>
                </div>
                <div class="form-group">
                    <label for="inputUpazilla">Union Name (Bangla)</label>
                    <input type="text" class="form-control col-md-6" id="UnionNameBn" name="NameBn" value="@Model.NameBn" placeholder="Enter Union Name Bangla">
                </div>
                <div class="form-group">
                    <label for="inputGeoCode">Geo Code</label>
                    <input type="text" class="form-control col-md-6" id="GeoCode" name="GeoCode" value="@Model.GeoCode" placeholder="Enter Geo Code">
                </div>

                <div class="form-group col-md-6">
                    <button type="submit" class="btn btn-primary submit-btn pull-right">Submit</button>
                </div>
            </div>
        }
    </div>
    <hr />
    <div class="card-header pull-left">
        <a href="/Union/Index" class="btn btn-warning">Return to Index</a>
    </div>
</div>

<script>
    $(".submit-btn").on("click", function () {
        if ($("#UnionForm").valid()) {
            $(".loader").fadeIn("slow");
        }
    });

    $("#UnionForm").validate({
        rules: {
            UnionName: "required",
            UpazillaId: "required"
        },
    });
</script>