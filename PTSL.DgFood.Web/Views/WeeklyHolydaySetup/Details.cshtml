@model PTSL.DgFood.Web.Model.WeeklyHolydaySetupVM
@{
    ViewBag.Title = "Details";
}


<div class="card">
    <div class="card-header">
        <h4>Weekly Holiday Setup Details</h4>
    </div>

    <div class="card-body">
        <div class="form-horizontal">
            <table style="width:100%">
                <tr>
                    <td style="width:33px;">Day: <b>@Model.Day</b></td>
                    <td style="width:33px;">Year: <b>@Model.YearDTO.YearsName</b></td>
                    <td style="width:34px;">Date: <b>@Model.HolidayDate.ToString("dd-MM-yyyy")</b></td>
                </tr>

            </table>

        </div>
    </div>
    <hr />
    <div class="card-header pull-left">
        <a href="/WeeklyHolydaySetup/Index" class="btn btn-warning">Return to Index</a>
    </div>
</div>



