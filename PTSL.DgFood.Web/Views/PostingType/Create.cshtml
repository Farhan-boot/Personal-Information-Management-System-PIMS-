@model PTSL.DgFood.Web.Model.PostingTypeVM
@{
    ViewBag.Title = "Create";
    var Message = ViewBag.Message;
}


<div class="card">
    <div class="card-header">
        <h4>Create New Posting Type</h4>
    </div>

    <div class="card-body">
        @using (Html.BeginForm("Create", "PostingType", FormMethod.Post, new { id = "PostingTypeForm" }))
        {
            <div class="form-horizontal">
                <div class="form-group">
                    <label for="inputPostingType">Posting Type Name <span style="color:red;">*</span></label>
                    <input type="text" class="form-control col-md-6" id="PostingTypeName" name="PostingTypeName" value="@Model.PostingTypeName" placeholder="Enter Posting Type Name" required>
                </div>
                <div class="form-group">
                    <label for="inputPostingType">Posting Type Name Bangla<span style="color:red;"></span></label>
                    <input type="text" class="form-control col-md-6" id="PostingTypeNameBangla" name="PostingTypeNameBangla" value="@Model.PostingTypeNameBangla" placeholder="Enter Posting Type Name Bangla">
                </div>

                <div class="form-group col-md-6">
                    <button type="submit" class="btn btn-primary submit-btn pull-right">Submit</button>
                </div>
            </div>
        }
    </div>
    <hr />
    <div class="card-header pull-left">
        <a href="/PostingType/Index" class="btn btn-warning">Return to Index</a>
    </div>
</div>

<script>
    $(".submit-btn").on("click", function () {
        if ($("#PostingTypeForm").valid()) {
            //Do something here
            $(".loader").fadeIn("slow");
        }
    });

    $("#PostingTypeForm").validate({
        // Specify validation rules
        rules: {
            PostingTypeName: "required"
        },

    });


</script>