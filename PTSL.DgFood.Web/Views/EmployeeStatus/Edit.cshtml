@model PTSL.DgFood.Web.Model.EmployeeStatusVM
@{
    ViewBag.Title = "Edit";
}

<div class="card">
    <div class="card-header">
        <h4>Edit Employee Status</h4>
    </div>

    <div class="card-body">
        @using (Html.BeginForm("Edit", "EmployeeStatus", FormMethod.Post, new { id = "EmployeeStatusForm" }))
        {
            <input type="hidden" name="Id" id="Id" value="@Model.Id" />
            <input type="hidden" name="CreatedAt" id="CreatedAt" value="@Model.CreatedAt" />
            <div class="form-horizontal">
                <div class="form-group">
                    <label for="inputEmployeeStatus">Employee Status Name <span style="color:red;">*</span></label>
                    <input type="text" class="form-control col-md-6" id="EmployeeStatusName" name="EmployeeStatusName" value="@Model.EmployeeStatusName" placeholder="Enter EmployeeStatus Name" required>
                </div>
                <div class="form-group">
                    <label for="inputEmployeeStatusBangla">Employee Status Name Bangla<span style="color:red;"></span></label>
                    <input type="text" class="form-control col-md-6" id="EmployeeStatusNameBangla" name="EmployeeStatusNameBangla" value="@Model.EmployeeStatusNameBangla" placeholder="Enter EmployeeStatus Name Bangla">
                </div>
                <div class="form-group col-md-6">
                    <button type="submit" class="btn btn-primary submit-btn pull-right">Submit</button>
                </div>
            </div>
        }
    </div>
    <hr />
    <div class="card-header pull-left">
        <a href="/EmployeeStatus/Index" class="btn btn-warning">Return to Index</a>
    </div>
</div>

<script>
    $(".submit-btn").on("click", function () {
        if ($("#EmployeeStatusForm").valid()) {
            //Do something here
            $(".loader").fadeIn("slow");
        }
    });

    $("#EmployeeStatusForm").validate({
        // Specify validation rules
        rules: {
            EmployeeStatusName: "required"
        },

    });


</script>