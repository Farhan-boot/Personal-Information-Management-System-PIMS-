@model PTSL.DgFood.Web.Model.DesignationVM
@{
    ViewBag.Title = "Create";
    var Message = ViewBag.Message;
}


<div class="card">
    <div class="card-header">
        <h4>Create New Designation</h4>
    </div>

    <div class="card-body">
        @using (Html.BeginForm("Create", "Designation", FormMethod.Post, new { id = "DesignationForm" }))
        {
            <div class="form-horizontal">
                <div class="form-group">
                    <label for="inputDesignation">Designation Class <span style="color:red;">*</span></label>
                    @Html.DropDownList("DesignationClassId", null, "Choose..", htmlAttributes: new { @class = "form-control col-md-6", @required = "required" })
                </div>
                <div class="form-group">
                    <label for="inputDesignation">Rank <span style="color:red;">*</span></label>
                    @Html.DropDownList("RankId", null, "Choose..", htmlAttributes: new { @class = "form-control col-md-6", @required = "required" })
                </div>
                <div class="form-group">
                    <label for="inputDesignation">Designation Name <span style="color:red;">*</span></label>
                    <input type="text" class="form-control col-md-6" id="DesignationName" name="DesignationName" value="@Model.DesignationName" placeholder="Enter Designation Name" required>
                </div>
                <div class="form-group">
                    <label for="inputDesignationBn">Designation Name Bangla<span style="color:red;"></span></label>
                    <input type="text" class="form-control col-md-6" id="DesignationNameBangla" name="DesignationNameBangla" value="@Model.DesignationNameBangla" placeholder="Enter Designation Name Bangla">
                </div>


                <div class="form-group col-md-6">
                    <button type="submit" class="btn btn-primary submit-btn pull-right">Submit</button>
                </div>
            </div>
        }
    </div>
    <hr />
    <div class="card-header pull-left">
        <a href="/Designation/Index" class="btn btn-warning">Return to Index</a>
    </div>
</div>

<script>
    $(".submit-btn").on("click", function () {
        if ($("#DesignationForm").valid()) {
            //Do something here
            $(".loader").fadeIn("slow");
        }
    });

    $("#DesignationForm").validate({
        // Specify validation rules
        rules: {
            DesignationName: "required",
            DesignationClassId: "required",
            RankId: "required"
        },

    });


</script>