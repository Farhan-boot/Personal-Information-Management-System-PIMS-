@model PTSL.BdArmy.Web.Model.AccesslistVM
@{
    ViewBag.Title = "Create";
    var Message = ViewBag.Message;
}


<div class="card">
    <div class="card-header">
        <h4>Create New Access List</h4>
    </div>

    <div class="card-body">
        @using (Html.BeginForm("Create", "Accesslist", FormMethod.Post, new { id = "AccesslistForm" }))
        {
        <div class="form-horizontal">

            <div class="form-group">
                <label for="inputAccesslist">Access Name</label>
                <input type="text" class="form-control col-md-6" id="Mask" name="Mask" value="@Model.Mask" placeholder="Enter Mask Name" required>

            </div>
            <div class="form-group">
                <label for="inputAccesslist">Base Module</label>
                @Html.DropDownList("BaseModule", null, "Choose..", htmlAttributes: new { @class = "form-control col-md-6", @required = "required" })

            </div>
            <div class="form-group">
                <label for="inputAccesslist">Controller</label>
                <input type="text" class="form-control col-md-6" id="ControllerName" name="ControllerName" value="@Model.ControllerName" placeholder="Enter Controller Name" required>

            </div>
            <div class="form-group">
                <label for="inputAccesslist">Action</label>
                <input type="text" class="form-control col-md-6" id="ActionName" name="ActionName" value="@Model.ActionName" placeholder="Enter Action Name" required>

            </div>
            <div class="form-group">
                <label for="inputAccesslist">Icon Class</label>
                <input type="text" class="form-control col-md-6" id="IconClass" name="IconClass" value="@Model.IconClass" placeholder="Enter Icon Class Name" required>

            </div>
            <div class="form-group">
                <label for="inputAccesslist">Menu Ordering No.</label>
                <input type="text" class="form-control col-md-6" id="BaseModuleIndex" name="BaseModuleIndex" value="@Model.BaseModuleIndex" placeholder="Enter Menu Ordering No.">

            </div>
            <div class="form-group col-md-6">
                <button type="submit" class="btn btn-primary submit-btn pull-right">Submit</button>
            </div>
        </div>
        }
    </div>
    <hr />
    <div class="card-header pull-left">
        <a href="/Accesslist/Index" class="btn btn-warning">Return to Index</a>
    </div>
</div>

<script>
    $(".submit-btn").on("click", function () {
        if ($("#AccesslistForm").valid()) {
            //Do something here
            $(".loader").fadeIn("slow");
        }
    });

    $("#AccesslistForm").validate({
        // Specify validation rules
        rules: {
            Mask: "required",
            ModuleId: "required",
            ControllerName: "required",
            ActionName: "required",
            IconClass: "required"

        },

    });


</script>