@model PTSL.DgFood.Web.Model.EntityViewModels.EmployeeManagementEntity.UniversityInformationVM
@{
    ViewBag.Title = "Edit";
}

<div class="card">
    <div class="card-header">
        <h4>Edit University Information</h4>
    </div>

    <div class="card-body">
        @using (Html.BeginForm("Edit", "UniversityInformation", FormMethod.Post, new { id = "UniversityInformationForm" }))
        {
            <input type="hidden" name="Id" id="Id" value="@Model.Id" />
            <input type="hidden" name="CreatedAt" id="CreatedAt" value="@Model.CreatedAt" />
            <div class="form-horizontal row">

                <div class="col-md-6">
                    <div class="form-group">
                        <label for="inputUniversityName">University Name English<span style="color:red;">*</span></label>
                        <input type="text" class="form-control" id="UniversityName" name="UniversityName" value="@Model.UniversityName" placeholder="Enter University Name" required>
                    </div>
                    <div class="form-group">
                        <label for="inputUniversityNameBn">University Name Bangla <span style="color:red;">*</span></label>
                        <input type="text" class="form-control" id="UniversityNameBn" name="UniversityNameBn" value="@Model.UniversityNameBn" placeholder="Enter University Name Bn" required>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary submit-btn pull-right">Submit</button>
                    </div>
                </div>

                @*<div class="col-md-6">
                    <div class="form-group">
                        <label for="inputEstablishedYear">Established Year <span style="color:red;">*</span></label>
                        <input type="text" class="form-control" id="EstablishedYear" name="EstablishedYear" value="@Model.EstablishedYear" placeholder="Enter Established Year" required>
                    </div>
                    <div class="form-group">
                        <label for="inputLocation">Location <span style="color:red;">*</span></label>
                        <input type="text" class="form-control" id="Location" name="Location" value="@Model.Location" placeholder="Enter Location" required>
                    </div>
                </div>*@

            </div>
        }
    </div>
    <hr />
    <div class="card-header pull-left">
        <a href="/UniversityInformation/Index" class="btn btn-warning">Return to Index</a>
    </div>
</div>

<script>
    $(".submit-btn").on("click", function () {
        if ($("#UniversityInformationForm").valid()) {
            //Do something here
            $(".loader").fadeIn("slow");
        }
    });

    $("#UniversityInformationForm").validate({
        // Specify validation rules
        rules: {
            UniversityName: "required"
        },

    });


</script>