            <div class="form-group">
                <label for="inputCalculationMethod" style="font-size:15px;">Calculation Method Name: <b>@Model.CalculationMethodName</b></label>
                @*<input type="text" class="form-control col-md-6" id="CalculationMethodName" name="CalculationMethodName" value="@Model.CalculationMethodName" placeholder="Enter CalculationMethod Name">*@
            </div>
            <div class="form-group">
                <label for="inputCalculationMethodBn" style="font-size:15px;">Calculation Method Name Bangla: <b>@Model.CalculationMethodNameBn</b></label>
            </div>
        </div>
    </div>
    <hr />
    <div class="card-header pull-left">
        <a href="/CalculationMethod/Index" class="btn btn-warning">Return to Index</a>
    </div>
</div>

