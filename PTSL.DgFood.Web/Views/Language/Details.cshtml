    <div class="card-header">
        <h4>Language Details</h4>
    </div>

    <div class="card-body">
        <div class="form-horizontal">
            <div class="form-group">
                <label for="inputLanguage" style="font-size:15px;">Language Name: <b>@Model.LanguageName</b></label>
                @*<input type="text" class="form-control col-md-6" id="LanguageName" name="LanguageName" value="@Model.LanguageName" placeholder="Enter Language Name">*@
            </div>

            <div class="form-group">
                <label for="inputLanguageBn" style="font-size:15px;">Language Name Bangla: <b>@Model.LanguageNameBn</b></label>
            </div>

        </div>
    </div>
    <hr />
    <div class="card-header pull-left">
        <a href="/Language/Index" class="btn btn-warning">Return to Index</a>
    </div>
</div>

