@model PTSL.DgFood.Web.Model.EmployeeTypeVM
@{
    ViewBag.Title = "Edit";
}

<div class="card">
    <div class="card-header">
        <h4>Edit Employee Type</h4>
    </div>

    <div class="card-body">
        @using (Html.BeginForm("Edit", "EmployeeType", FormMethod.Post, new { id = "EmployeeTypeForm" }))
        {
            <input type="hidden" name="Id" id="Id" value="@Model.Id" />
            <input type="hidden" name="CreatedAt" id="CreatedAt" value="@Model.CreatedAt" />
            <div class="form-horizontal">
                <div class="form-group">
                    <label for="inputEmployeeType">Employee Type Name <span style="color:red;">*</span></label>
                    <input type="text" class="form-control col-md-6" id="EmployeeTypeName" name="EmployeeTypeName" value="@Model.EmployeeTypeName" placeholder="Enter Employee Type Name" required>
                </div>
                <div class="form-group">
                    <label for="inputEmployeeTypeBn">Employee Type Name Bangla<span style="color:red;"></span></label>
                    <input type="text" class="form-control col-md-6" id="EmployeeTypeNameBn" name="EmployeeTypeNameBn" value="@Model.EmployeeTypeNameBn" placeholder="Enter Employee Type Name Bangla">
                </div>

                <div class="form-group col-md-6">
                    <button type="submit" class="btn btn-primary submit-btn pull-right">Submit</button>
                </div>
            </div>
        }
    </div>
    <hr />
    <div class="card-header pull-left">
        <a href="/EmployeeType/Index" class="btn btn-warning">Return to Index</a>
    </div>
</div>

<script>
    $(".submit-btn").on("click", function () {
        if ($("#EmployeeTypeForm").valid()) {
            //Do something here
            $(".loader").fadeIn("slow");
        }
    });

    $("#EmployeeTypeForm").validate({
        // Specify validation rules
        rules: {
            EmployeeTypeName: "required"
        },

    });


</script>