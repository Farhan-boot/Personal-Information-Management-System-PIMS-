@model PTSL.DgFood.Web.Model.DegreeVM
@{
    ViewBag.Title = "Create";
    var Message = ViewBag.Message;
}


<div class="card">
    <div class="card-header">
        <h4>Create New Degree</h4>
    </div>

    <div class="card-body">
        @using (Html.BeginForm("Create", "Degree", FormMethod.Post, new { id = "DegreeForm" }))
        {
            <div class="form-horizontal">
                <div class="form-group">
                    <label for="inputDegree">Degree Name <span style="color:red;">*</span></label>
                    <input type="text" class="form-control col-md-6" id="DegreeName" name="DegreeName" value="@Model.DegreeName" placeholder="Enter Degree Name" required>
                </div>
                <div class="form-group">
                    <label for="inputDegree">Degree Name Bangla<span style="color:red;"></span></label>
                    <input type="text" class="form-control col-md-6" id="DegreeNameBn" name="DegreeNameBn" value="@Model.DegreeNameBn" placeholder="Enter Degree Name Bangla">
                </div>

                <div class="form-group col-md-6 p-0">
                    <button type="submit" class="btn btn-primary submit-btn pull-right">Submit</button>
                </div>
            </div>
        }
    </div>
    <hr />
    <div class="card-header pull-left">
        <a href="/Degree/Index" class="btn btn-warning">Return to Index</a>
    </div>
</div>

<script>
    $(".submit-btn").on("click", function () {
        if ($("#DegreeForm").valid()) {
            //Do something here
            $(".loader").fadeIn("slow");
        }
    });

    $("#DegreeForm").validate({
        // Specify validation rules
        rules: {
            DegreeName: "required"
        },

    });


</script>