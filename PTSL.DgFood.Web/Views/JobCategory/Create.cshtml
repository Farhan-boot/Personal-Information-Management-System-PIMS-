@model PTSL.DgFood.Web.Model.JobCategoryVM
@{
    ViewBag.Title = "Create";
    var Message = ViewBag.Message;
}


<div class="card">
    <div class="card-header">
        <h4>Create New Job Category</h4>
    </div>

    <div class="card-body">
        @using (Html.BeginForm("Create", "JobCategory", FormMethod.Post, new { id = "JobCategoryForm" }))
        {
            <div class="form-horizontal">
                <div class="form-group">
                    <label for="inputJobCategory">Job Category Name <span style="color:red;">*</span></label>
                    <input type="text" class="form-control col-md-6" id="JobCategoryName" name="JobCategoryName" value="@Model.JobCategoryName" placeholder="Enter Job Category Name" required>
                </div>
                <div class="form-group">
                    <label for="inputJobCategoryBn">Job Category Name Bangla<span style="color:red;"></span></label>
                    <input type="text" class="form-control col-md-6" id="JobCategoryNameBn" name="JobCategoryNameBn" value="@Model.JobCategoryNameBn" placeholder="Enter Job Category Name Bangla">
                </div>

                <div class="form-group col-md-6">
                    <button type="submit" class="btn btn-primary submit-btn pull-right">Submit</button>
                </div>
            </div>
        }
    </div>
    <hr />
    <div class="card-header pull-left">
        <a href="/JobCategory/Index" class="btn btn-warning">Return to Index</a>
    </div>
</div>

<script>
    $(".submit-btn").on("click", function () {
        if ($("#JobCategoryForm").valid()) {
            //Do something here
            $(".loader").fadeIn("slow");
        }
    });

    $("#JobCategoryForm").validate({
        // Specify validation rules
        rules: {
            JobCategoryName: "required"
        },

    });


</script>