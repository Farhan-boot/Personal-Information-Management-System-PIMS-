@model PTSL.DgFood.Web.Model.PromtionNatureVM
@{
    ViewBag.Title = "Edit";
}

<div class="card">
    <div class="card-header">
        <h4>Edit Promotion Nature</h4>
    </div>

    <div class="card-body">
        @using (Html.BeginForm("Edit", "PromtionNature", FormMethod.Post, new { id = "PromtionNatureForm" }))
        {
            <input type="hidden" name="Id" id="Id" value="@Model.Id" />
            <input type="hidden" name="CreatedAt" id="CreatedAt" value="@Model.CreatedAt" />
            <div class="form-horizontal">
                <div class="form-group">
                    <label for="inputPromtionNature">Promtion Nature Name <span style="color:red;">*</span></label>
                    <input type="text" class="form-control col-md-6" id="PromtionNatureName" name="PromtionNatureName" value="@Model.PromtionNatureName" placeholder="Enter Promtion Nature Name" required>
                </div>
                <div class="form-group">
                    <label for="inputPromtionNatureBangla">Promtion Nature Name Bangla<span style="color:red;"></span></label>
                    <input type="text" class="form-control col-md-6" id="PromtionNatureNameBangla" name="PromtionNatureNameBangla" value="@Model.PromtionNatureNameBangla" placeholder="Enter Promtion Nature Name Bangla">
                </div>

                <div class="form-group col-md-6">
                    <button type="submit" class="btn btn-primary submit-btn pull-right">Submit</button>
                </div>
            </div>
        }
    </div>
    <hr />
    <div class="card-header pull-left">
        <a href="/PromtionNature/Index" class="btn btn-warning">Return to Index</a>
    </div>
</div>

<script>
    $(".submit-btn").on("click", function () {
        if ($("#PromtionNatureForm").valid()) {
            //Do something here
            $(".loader").fadeIn("slow");
        }
    });

    $("#PromtionNatureForm").validate({
        // Specify validation rules
        rules: {
            PromtionNatureName: "required"
        },

    });


</script>